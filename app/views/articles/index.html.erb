
<h1 class="text-center mt-4" id="index-header">Articles</h1>
<div class="container">
    <% @articles.reverse.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    By User
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
                    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                    <%= link_to "View", article_path(article), class:"btn btn-outline-info" %>
                    <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-info" %>
                    <%= link_to "Delete", article_path(article), class:"btn btn-outline-danger", method: 'delete', data: { confirm: "Are you sure you want to delete this?" } %>
                </div>

                <%= link_to "Articles",articles_path, class: "nav-link" %>
                <div class="card-footer text-muted">
                    <small>Created ago <%= time_ago_in_words(article.created_at) %>,
                    Edited ago <%= time_ago_in_words(article.updated_at) %></small>
                </div>
                </div>
            </div>
        </div>
    <% end %>
</div>


    

