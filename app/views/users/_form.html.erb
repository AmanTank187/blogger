<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @user %> 
        <%= form_with(model: @user, local: true,)  do |f| %>
            <div class="form-group ">
                <%= f.label :username, class: "col-2 col-form-label text-info" %>
                <div class="col-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter a Username" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :email, class: "col-2 col-form-label text-info"%>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control" ,placeholder: "Enter your Email" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :password, class: "col-2 col-form-label text-info"%>
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control" ,placeholder: "Enter a Password" %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%= f.submit "Sign up", class: "btn btn-outline-info btn-lg" %>
                </div>
            <% end %>
        </div> 
        <div class="mb-3">
            <%= link_to ' Cancel and return to articles listing ', articles_path, class: "text-info" %>
        </div>
    </div>
</div>